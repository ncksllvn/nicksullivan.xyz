<div class="py-6 px-6 sm:px-12 max-w-2xl mx-auto pace">

  <section>
    <div class="bg-green-200 rounded-lg p-4">
      <div class="grid sm:grid-cols-2 gap-6 items-center">
        <div class="flex place-content-center">
