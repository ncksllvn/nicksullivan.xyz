      <h2 class="text-3xl font-serif text-center">My recent writings</h2>
      <ul class="my-2 text-center">
      {% for article in collections.all %}
        {% if article.url != '/' %}
          <li class="mt-1">
            <a class="text-blue-600 hover:underline" href="{{ article.url | url }}">{{ article.data.title }}</a>
          </li>
        {% endif %}
      {% endfor %}
      </ul>
    </div>
  </section>

</div>
