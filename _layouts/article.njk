<!doctype html>
<html>
  {% include 'head.njk' %}
<body class="bg-green-50">
  {% include 'header.njk' %}

  <article>
    <header>
      <div class="bg-green-200">
        <div class="pt-12 pb-6 px-6 sm:px-12 xl:px-0 max-w-2xl mx-auto">
          <h1 class="text-4xl font-serif mb-2">
            <span class="font-semibold">{{ title }}</span>
            <span class="my-2 text-lg block">{{ subtitle }}</span>
          </h1>
          <p class="text-gray-600 mt-2 text-sm">
            <time datetime="{{ page.date }}">{{ page.date  | formatDate }}</time>
          </p>
        </div>
      </div>
    </header>

    <div class="my-4 px-6 sm:px-12 xl:px-0 max-w-2xl mx-auto">
      {# <div class="prose prose-xl font-serif">
        {{ introduction | safe }}
      </div> #}
      <div class="prose">
        {{ content | safe }}
      </div>
    </div>
  </article>

  {% include 'footer.njk' %}
</body>
</html>
